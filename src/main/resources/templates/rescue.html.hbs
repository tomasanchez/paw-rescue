{{#partial "customCSS"}}
<link rel="stylesheet" href="style/rescue.css" />
{{/partial}}

<!-- Page Title -->
{{#partial "pageTitle"}}
<title>RdP | Rescue</title>
{{/partial}}

{{#partial "content"}}
<!-- Required meta tags -->
<div class="form-rescue bg-light">
    <form action="/rescue" method="POST">
        <div class="d-flex flex-row justify-content-between">
            <div>
                <div class="form-floating">
                    <input name="description" type="text" class="form-control" id="floatingInput"
                        placeholder="Descripcion" required="true" />
                    <label for="floatingInput">{{i18n.description}}</label>
                </div>

                <div class="form-floating">
                    <input name="positionX" type="text" class="form-control" id="floatingInput"
                        placeholder="Coordenada X" required="true" />
                    <label for="floatingPassword">{{i18n.positionX}}</label>
                </div>

                <div class="form-floating">
                    <input name="positionY" type="text" class="form-control" id="floatingInput"
                        placeholder="Coordenada Y" required="true" />
                    <label for="floatingPassword">{{i18n.positionY}}</label>
                </div>

            </div>
            <div>

                <div class="form-floating">
                    <input name="tag" type="text" class="form-control" id="floatingInput" placeholder="Tag"
                        />
                    <label for="floatingInput">{{i18n.chapita}}</label>
                </div>
                <div class="d-flex flex-row" style="margin-top: 5%;">
                    <p>Type</p>
                    <select style="margin-left: 5%;min-width: 50%;" name="type">
                        <option value="0">Dog</option>
                        <option value="1">Cat</option>
                    </select>
                </div>
                <div class="d-flex flex-row" style="margin-top: 5%;">
                    <p>Size</p>
                    <select style="margin-left: 5%;min-width: 50%;" name="size">
                        <option value="0">Big</option>
                        <option value="1">Medium</option>
                        <option value="2">Small</option>
                    </select>
                </div>
            </div>
        </div>
        <div style="padding-top: 10%;">

            <button class="w-100 btn btn-lg btn-success" type="submit">{{i18n.found}}</button>



        </div>
    </form>
</div>
{{/partial}}

{{> layout/LAYOUT.html.hbs }}
