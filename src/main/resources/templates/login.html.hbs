
{{#partial "customCSS"}}
<link rel="stylesheet" href="style/login.css" />
{{/partial}}

<!-- Page Title -->
{{#partial "pageTitle"}}
  <title>RdP | Log In</title>
{{/partial}}

{{#partial "content"}}
    <!-- Required meta tags -->
    <div class="form-signin bg-light">
      <form action="/login" method="POST">
        <i class="fa fa-paw mt-3 mb-4 paw-logo" aria-hidden="true"></i>
        <h1 class="h3 mb-3 fw-normal">{{i18n.signInForm}}</h1>
        <div class="form-floating">
          <input
            name="user"
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="name@example.com"
            value="{{username}}"
            required="true"
          />
          <label for="floatingInput">{{i18n.username}}</label>
        </div>
        <div class="form-floating">
          <input
            name="password"
            type="password"
            class="form-control {{isValid}}"
            id="floatingPassword"
            placeholder="Password"
            required="true"
          />
          <label for="floatingPassword">{{i18n.password}}</label>
        </div>

        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me" /> {{i18n.rememberMe}}
          </label>
        </div>
        <button class="w-100 btn btn-lg btn-success" type="button">{{i18n.signUp}}</button>
        <button class="w-100 btn btn-lg btn-light" type="submit">{{i18n.signIn}}</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
      </form>
    </div>
{{/partial}}

{{> layout/LAYOUT.html.hbs }}
