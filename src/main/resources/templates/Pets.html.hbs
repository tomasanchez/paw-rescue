<script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>


{{#partial "table"}}
      <!-- Table -->
      <table
        id="dataTable"
        class="table table-hover table-borderless table-sm mt-3 mb-3 text-center"
        style="width: 100%"
      >
        <!-- Column Headers -->
        <thead>
          <tr>
            <th scope="col">{{i18n.name}}</th>
            <th scope="col">{{i18n.petType}}</th>
            <th scope="col">{{i18n.petSex}}</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <!-- Data rows -->
          {{#user.mascotas}}
          <tr>
            <td>
              <span>{{nombre}}</span>
            </td>
            <td>
              <span>{{tipoMascota}}</span>
            <td>
              <span>{{sexo}}</span>
            </td>
            <td>
              <span style="display:none">{{id}}</span>
              <form class="mb-0 mt-0" action="#">
                <input id="delete-{{id}}" type="hidden" name="delete" value="true"/>
                <button class="btn btn-outline-danger mt-0 mb-0" type="button" onclick="onDelete('/pets/{{id}}')">
                  <i class="fa fa-trash" aria-hidden="true"></i>
                </button>
              </form>
            </td>
            <td>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-qr-code" viewBox="0 0 16 16">
                <path d="M2 2h2v2H2V2Z"/>
                <path d="M6 0v6H0V0h6ZM5 1H1v4h4V1ZM4 12H2v2h2v-2Z"/>
                <path d="M6 10v6H0v-6h6Zm-5 1v4h4v-4H1Zm11-9h2v2h-2V2Z"/>
                <path d="M10 0v6h6V0h-6Zm5 1v4h-4V1h4ZM8 1V0h1v2H8v2H7V1h1Zm0 5V4h1v2H8ZM6 8V7h1V6h1v2h1V7h5v1h-4v1H7V8H6Zm0 0v1H2V8H1v1H0V7h3v1h3Zm10 1h-1V7h1v2Zm-1 0h-1v2h2v-1h-1V9Zm-4 0h2v1h-1v1h-1V9Zm2 3v-1h-1v1h-1v1H9v1h3v-2h1Zm0 0h3v1h-2v1h-1v-2Zm-4-1v1h1v-2H7v1h2Z"/>
                <path d="M7 12h1v3h4v1H7v-4Zm9 2v2h-3v-1h2v-1h1Z"/>
              </svg>
              <div id="qrcode" style="display:none" data-petID={{id}}></div>
              <button class="btn btn-outline-info mt-0 mb-0" type="button" id="qrprint">{{i18n.petsPrintQR}}</button>
            </td>
          </tr>
          {{/user.mascotas}}
        </tbody>
      </table>
      <div class="container mt-4">
        <a class="btn btn-success btn-lg" href="{{hrefs.registerpet}}">
          {{i18n.registerPet}}
        </a>
      </div>
{{/partial}}


<!-- CREATE QR CODE ON PAGE LOAD -->
<script>
window.addEventListener("load", function(){
  // (1) CREATE QR
  var qrb = document.getElementById("qrcode");
  var qrc = new QRCode(qrb, {
    text: qrb.getAttribute('data-petID'),
    width: 150,
    height: 150,
    colorDark: "#000000"
  });

  // (2) PRINT QR
  document.getElementById("qrprint").addEventListener("click", function(){
    var printwin = window.open("");
    printwin.document.write(document.getElementById("qrcode").innerHTML);
    printwin.stop();
    printwin.print();
    printwin.close();
  });
});
</script>

