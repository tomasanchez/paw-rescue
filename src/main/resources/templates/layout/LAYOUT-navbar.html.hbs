<html lang="{{i18n.lang}}">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicon -->
    <link rel="icon" href="/assets/favicon.ico" type="image/x-icon" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icons CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css"
    />
    <!-- FA Icons-->
    <script
      src="https://kit.fontawesome.com/839e8b1ba6.js"
      crossorigin="anonymous"
    ></script>
    <!-- Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Chakra Petch"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.1/mdb.min.css"
      rel="stylesheet"
    />
    <!-- Custom CSS-->
    <link rel="stylesheet" href="style/style.css" />
    {{#block "customCSS"}}{{/block}}
    <!-- Page Title-->
    <title>{{#block "pageTitle"}}{{/block}}</title>
  </head>
  <!-- Body -->
  <body class="text-center">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
      <!-- Container wrapper -->
      <div class="container-fluid">
        <!-- Toggle button -->
        <button
          class="navbar-toggler"
          type="button"
          data-mdb-toggle="collapse"
          data-mdb-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <i class="fas fa-bars"></i>
        </button>
        <!-- Collapsible wrapper -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- Navbar brand -->
          <a class="navbar-brand mt-2 mt-lg-0" href="{{endpoints.home}}">
            <i class="fa fa-paw" aria-hidden="true" style="font-size: 2rem"></i>
            <small class="ms-2 me-2">{{i18n.brand}}</small>
          </a>
          <!-- Left links -->
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-start">
            <!-- Home -->
            <li class="nav-item">
              <a
                class="nav-link {{navigation.home}}"
                aria-current="page"
                href="{{endpoints.home}}"
              >{{i18n.home}}</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link {{navigation.rescue}}"
                aria-current="page"
                href="{{endpoints.rescue}}"
              >{{i18n.rescue}}</a>
            </li>
            {{#if loggedIn}}
              <li class="nav-item">
                <a
                  class="nav-link {{navigation.pets}}"
                  href="{{endpoints.pets}}"
                >{{i18n.pets}}</a>
              </li>
              {{#if isAdmin}}
                <!-- Features -->
                <li class="nav-item">
                  <a
                    class="nav-link {{navigation.features}}"
                    href="{{endpoints.features}}"
                  >{{i18n.manageFeatures}}</a>
                </li>
              {{/if}}
            {{else}}
              <li class="nav-item">
                <a
                  class="nav-link"
                  href="{{endpoints.login}}"
                >{{i18n.signIn}}</a>
              </li>
            {{/if}}
          </ul>
          <!-- Left links -->
        </div>
        <!-- Collapsible wrapper -->

        <!-- Right elements -->
        {{#if loggedIn}}
          <div class="d-flex align-items-center">
            <!-- Notifications -->
            <a
              class="text-reset me-3 dropdown-toggle hidden-arrow"
              href="#"
              id="navbarDropdownMenuLink"
              role="button"
              data-mdb-toggle="dropdown"
              aria-expanded="false"
            >
              <i class="fas fa-bell"></i>
              <span
                class="badge rounded-pill badge-notification bg-danger"
              >2</span>
            </a>
            <ul
              class="dropdown-menu dropdown-menu-end"
              aria-labelledby="navbarDropdownMenuLink"
            >
              <li>
                <a
                  class="dropdown-item"
                  href="#"
                >{{i18n.petFoundNotification}}</a>
              </li>
              <li>
                <a
                  class="dropdown-item"
                  href="#"
                >{{i18n.recommendationNotification}}</a>
              </li>
            </ul>

            <!-- Avatar -->
            <a
              class="dropdown-toggle d-flex align-items-center hidden-arrow"
              href="#"
              id="navbarDropdownMenuLink"
              role="button"
              data-mdb-toggle="dropdown"
              aria-expanded="false"
            >
              <img
                src="https://github.com/{{user.usuario}}.png"
                alt="{{user.usuario}}"
                width="45"
                height="45"
                class="rounded-circle"
                loading="lazy"
                onerror="this.src='https://sap.github.io/ui5-webcomponents/assets/images/avatars/man_avatar_1.png'"
              />
            </a>
            <ul
              class="dropdown-menu dropdown-menu-end"
              aria-labelledby="navbarDropdownMenuLink"
            >
              <li>
                <a
                  class="dropdown-item disabled"
                  href="#"
                >{{i18n.myProfile}}</a>
              </li>
              <li>
                <a class="dropdown-item disabled" href="#">{{i18n.settings}}</a>
              </li>
              <li>
                <form
                  method="POST"
                  action="{{endpoints.login}}"
                  class="dropdow-item mt-0 mb-0"
                >
                  <button
                    type="submit"
                    name="uid"
                    value="false"
                    class="dropdown-item"
                  >
                    {{i18n.signOut}}
                  </button>
                </form>
              </li>
            </ul>
          </div>
        {{/if}}
        <!-- Right elements -->
      </div>
      <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->

    <!-- Content -->
    {{#block "content"}}{{/block}}
    <!-- Content -->

    <!-- Flexbox container for aligning the toasts -->
    <div
      aria-live="polite"
      aria-atomic="true"
      class="d-flex justify-content-center align-items-center w-100"
    >
      <!-- Then put toasts within -->
      <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <strong class="me-auto">Rescate de Patitas</strong>
          <small>{{i18n.justNow}}</small>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
        <div class="toast-body {{toastStatus}} text-white">
          {{toastMessage}}
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-center text-white mt-5">
      <!-- Grid container -->
      <div class="container p-4">
        <!-- Section: Social media -->
        <section class="mb-4">

          <a
            class="btn btn-outline-light btn-floating m-1"
            href="https://tomasanchez.github.io/"
            target="_blank"
            role="button"
          ><i class="fas fa-globe"></i></a>

          <!-- Linkedin -->
          <a
            class="btn btn-outline-light btn-floating m-1"
            href="https://www.linkedin.com/in/tbsanchez/"
            target="_blank"
            role="button"
          ><i class="fab fa-linkedin-in"></i></a>

          <!-- Github -->
          <a
            class="btn btn-outline-light btn-floating m-1"
            href="https://github.com/tomasanchez/paw-rescue"
            target="_blank"
            role="button"
          ><i class="fab fa-github"></i></a>

        </section>
        <!-- Section: Social media -->

        <!-- Section: Text -->
        <section class="mb-4">
          <p>
            {{i18n.footerText}}
          </p>
        </section>
        <!-- Section: Text -->

        <!-- Section: Links -->
        <section class="">
          <!--Grid row-->
          <div class="row">
            <!--Grid column-->
            <div class="col-lg-6 col-md-6 mb-4 mb-md-0">
              <h5 class="text-uppercase">{{i18n.authors}}</h5>

              <ul class="list-unstyled mb-0">
                <li>
                  <a href="#!" class="text-white">Adrián Arakaki</a>
                </li>
                <li>
                  <a href="#!" class="text-white">Santiago Candía</a>
                </li>
                <li>
                  <a
                    href="https://www.linkedin.com/in/tbsanchez/"
                    target="_blank"
                    class="text-white"
                  >Tomás Sánchez</a>
                </li>
              </ul>
            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="col-lg-6 col-md-6 mb-4 mb-md-0">
              <h5 class="text-uppercase">{{i18n.contact}}</h5>

              <ul class="list-unstyled mb-0">
                <li>
                  <a
                    href="mailto:adridariara@hotmail.com"
                    class="text-white"
                  >adridariara@hotmail.com</a>
                </li>
                <li>
                  <a
                    href="mailto:candia.g.santiago@gmail.com"
                    class="text-white"
                  >candia.g.santiago@gmail.com</a>
                </li>
                <li>
                  <a
                    href="mailto:tosanchez@frba.utn.edu.ar"
                    class="text-white"
                  >tosanchez@frba.utn.edu.ar</a>
                </li>
              </ul>
            </div>
            <!--Grid column-->
          </div>
          <!--Grid row-->
        </section>
        <!-- Section: Links -->
      </div>
      <!-- Grid container -->

      <!-- Copyright -->
      <div
        class="text-center p-3"
        style="background-color: rgba(0, 0, 0, 0.2);"
      >
        © 2021 Copyright
      </div>
      <!-- Copyright -->
    </footer>
    <!-- Footer -->

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <!-- MDB -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.1/mdb.min.js"
    ></script>
    {{#block "customJS"}}{{/block}}
    <script>
      document.addEventListener("DOMContentLoaded", function(){ var toastElList
      = [].slice.call(document.querySelectorAll('.toast')); var toastList =
      toastElList.map(function(toastEl) { return new bootstrap.Toast(toastEl)});
      if({{showToast}}){ toastList.forEach(toast => toast.show()); }});
    </script>
  </body>

</html>
